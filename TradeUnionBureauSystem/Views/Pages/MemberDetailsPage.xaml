<Page x:Class="TradeUnionBureauSystem.Views.Pages.MemberDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TradeUnionBureauSystem.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MemberDetailsPage">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#98F9FF" Offset="0" />
                <GradientStop Color="#397CFE" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Background="#165DE5" CornerRadius="20">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="300" Height="300" CornerRadius="15" ClipToBounds="True">
                            <Border.Background>
                                <ImageBrush x:Name="UserPicture"/>
                            </Border.Background>
                        </Border>
                        <StackPanel Width="400" VerticalAlignment="Center" Margin="20">
                            <TextBox x:Name="txbFullName" IsReadOnly="True" />
                            <ComboBox x:Name="cbxPosition" IsEnabled="False" DisplayMemberPath="PositionName" SelectedValuePath="PositionID"/>
                            <TextBox x:Name="txbAcademicGroup" IsReadOnly="True"/>
                            <TextBox x:Name="txbReceiptDate" IsReadOnly="True"/>
                            <TextBox x:Name="txbPhoneNumber" IsReadOnly="True"/>
                            <TextBox x:Name="txbVkLink" IsReadOnly="True"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
