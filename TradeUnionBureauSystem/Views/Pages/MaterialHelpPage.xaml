            </TabControl>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button x:Name="AddButton" Content="Добавить" Width="300" Click="AddButton_Click" Visibility="Collapsed" Style="{StaticResource CustomButtonStyle}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="DeleteButton" Width="300" Style="{StaticResource CustomButtonStyle}" Content="Удалить" Click="DeleteButton_Click" Visibility="Collapsed" Margin="10,0,0,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
            <TextBlock x:Name="TotalSumTextBlock" Text="Общая сумма выплат за месяц: 0 рублей" Margin="10" HorizontalAlignment="Center" FontSize="16"/>
        </StackPanel>
    </Grid>
</Page>
